{% extends "master.jinja" %}

{% block title %}
  Kubernetes v{{version}} Resources
{% endblock %}

{% block head %}
<style>
body {
  font-family: monospace, sans-serif;
}

.page {
  text-align: center;
}

table {
  margin: auto;
}

thead {background: lightgray}

tr:nth-child(even) {background: #F1F1F1}

td {
  line-height: 1.6em;
}

</style>
{% endblock %}

{% block content %}
<div class="main">
  <div class="page">
    <h3>Kubernetes v{{version}} Resources</h3>
    <table>
      <thead>
        <tr>
         <td>NAME</td>
         <td>SHORTNAMES</td>
         <td>APIGROUP</td>
         <td>NAMESPACED</td>
         <td>KIND</td>
        </tr>
      </thead>
      <tbody>
        {% for resource in resources %}
        <tr>
          <td><a href="{{url_for('resource.doc', ver=version, rpath=resource.id)}}">{{resource.name}}</a></td>
          <td>{{resource.short_names}}</td>
          <td>{{resource.api_group}}</td>
          <td>{{resource.namespaced}}</td>
          <td>{{resource.kind}}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}